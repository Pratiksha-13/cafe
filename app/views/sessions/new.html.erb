<html>
<head>
	<style>

body{
   background-image:url("/assets/login1.jpg");
   background-repeat: no-repeat;
   background-size: cover;	
}

</style>
</head>
<body>
<p id='alert'><%=alert%></p>
<h1>Login</h1>
<%=form_tag sessions_path do |form| %>
<div class='field'>
  <%=label_tag :email %>
  <%=text_field_tag :email %>
</div>
<div class='field'>
  <%=label_tag :password%>
  <%=password_field_tag :password%>
</div>
<div class='action'>
   <%=submit_tag'Login'%>
</div>
<%end%>  
</body>
</html> 	
